
<section>


<div class="author text-center my-20">
    <h1 class="text-6xl font-bold mb-8">Hi, I am Reddy.</h1>
    <h3 class="text-3xl font-semiboldbold">Web developer & Content creator</h3>
</div>

<div class="">
    <img class="w-[60rem] mx-auto object-fill h-auto rounded-lg shadow-2xl" src="./image/computer.jpg" alt="">
</div>



<!-- Posts Section Starts Here --> 

<div class="posts max-w-[64rem]  mx-auto my-10 group px-6">
    <h1 class="text-3xl font-bold mb-10">Latest Posts</h1>

    <% posts.forEach(post => { %>
        <div class="post md:flex justify-between items-center cursor-pointer py-5 border-b border-sky-200 hover:blur-none group-hover:blur-[2px] hover:!blur-none transition-all">
        <a href="/post/<%=post._id%>"> <p class="text-[1.5rem] font-semibold mb-3"><%=  post.title %> </p> </a> 
            <span class="text-[1rem] "><%= post.createdAt.toDateString() %></span>
            
    
        </div>
    <% }) %>

   




</div>




<% if (nextPage) { %>
    <div class=" max-w-[64rem] mx-auto px-6">
        <a href="/?page=<%= nextPage %> " class="text-2xl text-gray-600" >View older posts &lt</a>
    </div>
<% } %> 

 

</section>



